{% extends 'plain_card_base.html.twig' %}

{% block title %}Create Account{% endblock %}


{% block card_header %} 
    <img id="zvc-logo" style="max-width:150px;" src="{{ asset('build/logo.png') }}" alt="Logo">
    <h2 class="card-title">Register</h2>
{% endblock %}


{% block card_body %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a
                    href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% else %}
        <form method="post">
            {% if error %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{ error }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <i class="tim-icons icon-simple-remove"></i>
                    </button>
                </div>
            {% endif %}

            {% if success %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{ success }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <i class="tim-icons icon-simple-remove"></i>
                    </button>
                </div>
            {% endif %}


            <div class="form-group">
                <input type="text" class="form-control" name="inputFirstname" value="{{ inputFirstname }}" required autofocus placeholder="Name">
            </div>

            <div class="form-group">
                <input type="text" class="form-control" name="inputLastname" value="{{ inputLastname }}" required autofocus placeholder="Surname">
            </div>

            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text">
                        <i class="fas fa-user"></i>
                    </div>
                </div>
                <input type="email" name="inputEmail" class="form-control" required autofocus value="{{ inputEmail }}" placeholder="Email">
            </div>

            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text">
                        <i class="fas fa-key"></i>
                    </div>
                </div>
                <input type="password" name="inputPassword" class="form-control" required placeholder="Password">
            </div>

            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text">
                        <i class="fas fa-key"></i>
                    </div>
                </div>
                <input type="password" name="inputConfirmPassword" class="form-control" required placeholder="Confirm Password">
            </div>

            <div class="form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" required name="terms" />
                    I agree with the terms and conditions
                    <span class="form-check-sign"><span class="check"></span></span>
                </label>
            </div>


            <button class="btn btn-lg btn-primary btn-block" type="submit">
                Register
            </button>
        </form>
    {% endif %}
{% endblock %}


{% block card_footer %}
    <a href="{{ path('app_login') }}" class="btn btn-sm btn-success btn-simple">
        <i class="fas fa-user"></i> &nbsp;&nbsp; Sign In
    </a>
    <a href="{{ path('app_forget_password') }}" class="btn btn-sm btn-info btn-simple">
        <i class="fas fa-unlock"></i> &nbsp;&nbsp; Forgot Password ?
    </a>
{% endblock %}
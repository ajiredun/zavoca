{% extends 'plain_card_base.html.twig' %}

{% block title %}Reset Password{% endblock %}


{% block card_header %} 
    <img id="zvc-logo" style="max-width:150px;" src="{{ asset('build/logo.png') }}" alt="Logo">
    <h2 class="card-title">Reset Password</h2>
{% endblock %}


{% block card_body %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a
                    href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% else %}
        <form method="post">
            {% if error %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{ error }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <i class="tim-icons icon-simple-remove"></i>
                    </button>
                </div>
            {% endif %}

            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text">
                        <i class="fas fa-user"></i>
                    </div>
                </div>
                <input id="inputEmail" type="email" name="input_email" class="form-control" required autofocus placeholder="Email">
            </div>

            <button class="btn btn-lg btn-primary btn-block" type="submit">
                Reset
            </button>
        </form>
    {% endif %}
{% endblock %}


{% block card_footer %}
    <a href="{{ path('app_login') }}" class="btn btn-sm btn-info btn-simple">
        <i class="fas fa-user"></i> &nbsp;&nbsp; Sign In
    </a>
    <a href="{{ path('app_register') }}" class="btn btn-sm btn-success btn-simple">
        <i class="fas fa-user-plus"></i> &nbsp;&nbsp; Create Account
    </a>
{% endblock %}
{% extends 'base.html.twig' %}

{% block whole %}
    <div class="main-wrapper">
        <div class="preloader">
            <div class="lds-ripple">
                <div class="lds-pos"></div>
                <div class="lds-pos"></div>
            </div>
        </div>

        <div class="auth-wrapper d-flex no-block justify-content-center align-items-center"
             style="background:url({% block background_image %}{{ asset('build/backoffice-theme/images/background/desktop_mountain.jpg') }}{% endblock %}) no-repeat center center; background-size:cover;">
            <div class="auth-box" {% block auth_style %}{% endblock %}>
                {% block box %}
                    <div id="form">
                        <div class="logo">
                            {% block box_logo %}
                                <span><img class="auth_logo" src="{{ asset('build/logo.png') }}" alt="Zavoca" /></span>
                            {% endblock %}
                            {% block box_title %}
                                <h5 class="font-medium m-b-20">Sign In</h5>
                            {% endblock %}
                        </div>
                        <!-- Form -->
                        <div class="row">
                            <div class="col-12">
                                {% block form %}
                                <form class="form-horizontal m-t-20" action="index.html">
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="basic-addon1"><i class="ti-user"></i></span>
                                        </div>
                                        <input type="text" class="form-control form-control-lg" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="basic-addon2"><i class="ti-pencil"></i></span>
                                        </div>
                                        <input type="text" class="form-control form-control-lg" placeholder="Password" aria-label="Password" aria-describedby="basic-addon1">
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-12">
                                            <div class="custom-control custom-checkbox">
                                                <input type="checkbox" class="custom-control-input" id="customCheck1">
                                                <label class="custom-control-label" for="customCheck1">Remember me</label>
                                                <a href="javascript:void(0)" id="to-recover" class="text-dark float-right"><i class="fa fa-lock m-r-5"></i> Forgot pwd?</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group text-center">
                                        <div class="col-xs-12 p-b-20">
                                            <button class="btn btn-block btn-lg btn-info" type="submit">Log In</button>
                                        </div>
                                    </div>
                                    <div class="form-group m-b-0 m-t-10">
                                        <div class="col-sm-12 text-center">
                                            Don't have an account? <a href="authentication-register1.html" class="text-info m-l-5"><b>Sign Up</b></a>
                                        </div>
                                    </div>
                                </form>
                                {% endblock %}
                            </div>
                        </div>
                    </div>
                {% endblock %}
            </div>
        </div>

    </div>
{% endblock %}
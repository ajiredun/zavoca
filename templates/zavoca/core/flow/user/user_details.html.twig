{% set user_form = flow.user_form %}
{% set user = flow.user %}

{{ form_start(user_form) }}
<div class="card-body">
    <h4 class="card-title">Basic Details</h4>
    <div class="row">
        <div class="col-md-12">
            {{ form_errors(user_form) }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            {{ form_row(user_form.firstname) }}
        </div>
        <div class="col-md-6">
            {{ form_row(user_form.lastname) }}
        </div>
    </div>

</div>
<div class="card-body bg-light">
    <h4 class="card-title">Contact Details</h4>
    <div class="row">
        <div class="col-md-6">
            {{ form_row(user_form.email) }}
        </div>
        <div class="col-md-3">
            {{ form_row(user_form.mobile) }}
        </div>
        <div class="col-md-3">
            {{ form_row(user_form.telephone) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            {{ form_row(user_form.address) }}
        </div>
        <div class="col-md-3">
            {{ form_row(user_form.zipcode) }}
        </div>
        <div class="col-md-3">
            {{ form_row(user_form.country) }}
        </div>
    </div>
</div>

{% if app.user.id == user.id %}
    <div class="card-body">
        <h4 class="card-title">Theme Details</h4>

        <div class="row">
            <div class="col-md-12">
                {{ form_row(user_form.autoDarkMode) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <button type="button" class="btn btn-info" id="open-theme-customizer">Customize Theme</button>
                <script>
                    $(document).ready(function () {
                        $('#open-theme-customizer').on('click', function () {
                            setTimeout(function () {
                                $('.service-panel-toggle').trigger('click');
                            },500);
                        });
                    });
                </script>
            </div>
        </div>
    </div>
{% endif %}

<div class="card-body">
    <div class="row">
        <div class="col-md-12">
            {{ form_rest(user_form) }}
        </div>
    </div>
</div>

{% if is_granted('ROLE_USER_MANAGEMENT_EDITOR', user) %}
    <div class="card-body">
        <div class="row">
            <div class="col-md-12 text-right">
                <button type="submit"  class="btn btn-success"><i class="fa fa-check"></i> Save</button>
            </div>
        </div>
    </div>
{% endif %}
{{ form_end(user_form) }}


